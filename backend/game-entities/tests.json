{
  "tests": [
    {
      "name": "Get all characters",
      "method": "GET",
      "path": "/?type=characters",
      "expectedStatus": 200,
      "expectedBody": [],
      "bodyMatcher": "type"
    },
    {
      "name": "Get all worlds",
      "method": "GET",
      "path": "/?type=worlds",
      "expectedStatus": 200,
      "expectedBody": [],
      "bodyMatcher": "type"
    },
    {
      "name": "Create character",
      "method": "POST",
      "path": "/?type=characters",
      "body": {
        "name": "Test Hero",
        "role": "Warrior",
        "avatar": "https://example.com/avatar.jpg",
        "stats": "Strength: 18",
        "personality": "Brave",
        "backstory": "A test hero"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "name": "string",
        "role": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create world",
      "method": "POST",
      "path": "/?type=worlds",
      "body": {
        "name": "Test World",
        "description": "A test world",
        "image": "https://example.com/world.jpg",
        "genre": "Fantasy"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "name": "string",
        "description": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
