{
  "tests": [
    {
      "name": "Get all characters",
      "method": "GET",
      "path": "/?type=characters",
      "expectedStatus": 200,
      "expectedBody": [],
      "bodyMatcher": "type"
    },
    {
      "name": "Get all worlds",
      "method": "GET",
      "path": "/?type=worlds",
      "expectedStatus": 200,
      "expectedBody": [],
      "bodyMatcher": "type"
    },
    {
      "name": "Create character without auth returns 401",
      "method": "POST",
      "path": "/?type=characters",
      "body": {
        "name": "Test Hero",
        "role": "Warrior"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create world without auth returns 401",
      "method": "POST",
      "path": "/?type=worlds",
      "body": {
        "name": "Test World"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}